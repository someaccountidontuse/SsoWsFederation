@model RelyingParty2.ViewModels.UserViewModel
@{
    ViewBag.Title = "Relying Party2 > User";
}

<div>
    <h1>Welcome to Relying Party 2</h1>
    @if (Request.IsAuthenticated)
    {
        <p>Hello, @ViewBag.Name you are currently authenticated. Below are your STS claims plus your domain specific claims for RP2.
        </p>
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>Claim type</th>
                <th>Claim value</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var claim in Model.Claims)
            {
                <tr>

                    <td>@claim.Type</td>
                    <td>@claim.Value</td>

                </tr>
            }
            </tbody>
        </table>
        <p>
            <a href="http://localhost:18635/user/get">Goto Relying Party 1 (via the STS to track your movements)</a>
        </p>
        <p>
            <a href="http://localhost:18636/signout/get">Federated Logout (via the STS as it has been tracking your movements)</a>
        </p>
    }
    else
    {
    <p> Hello,my authentication system doesnt work properly, go ahead and break in...</p>
    }
</div>
